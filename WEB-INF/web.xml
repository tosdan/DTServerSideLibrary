	<servlet>
        <servlet-name>DTReplyServlet</servlet-name>
        <servlet-class>com.github.tosdan.dataTableServerSide.DTReplyServlet</servlet-class>
        
        <init-param>
        	<param-name>file_dbConf</param-name>
        	<param-value>/WEB-INF/dbconf.properties</param-value>
       	</init-param>
       	
        <init-param>
	        <param-name>logFileName</param-name>
	        <param-value>/WEB-INF/DTReplyLog/logTestDB.txt</param-value>
	    </init-param>
        
        <init-param>
	        <param-name>DTReplyConf_File</param-name>
	        <param-value>/WEB-INF/WebAppsConfigFiles/DTReply/DTReplyConf.properties</param-value>
	    </init-param>
        
        <init-param>
	        <param-name>DTReplyConf_Path</param-name>
	        <param-value>/WEB-INF/WebAppsConfigFiles/DTReply</param-value>
	    </init-param>
        
    </servlet>
    <servlet-mapping>
        <servlet-name>DTReplyServlet</servlet-name>
        <url-pattern>/dtreply/*</url-pattern>
    </servlet-mapping>
        
        
	<servlet>
        <servlet-name>SqlManagerServlet</servlet-name>
        <servlet-class>com.github.tosdan.utils.servlets.SqlManagerServlet</servlet-class>
        
        <init-param>
        	<param-name>file_dbConf</param-name>
        	<param-value>/WEB-INF/dbconf.properties</param-value>
       	</init-param>
       	
        <init-param>
	        <param-name>logFileName</param-name>
	        <param-value>/WEB-INF/DTReplyLog/logTestDB.txt</param-value>
	    </init-param>
        
        <init-param>
	        <param-name>SqlManagerServletConf_File</param-name>
	        <param-value>/WEB-INF/WebAppsConfigFiles/SqlManager/SqlManagerServletConf.properties</param-value>
	    </init-param>
        
        <init-param>
	        <param-name>SqlManagerServletConf_Path</param-name>
	        <param-value>/WEB-INF/WebAppsConfigFiles/SqlManager</param-value>
	    </init-param>
        
    </servlet>
    <servlet-mapping>
        <servlet-name>SqlManagerServlet</servlet-name>
        <url-pattern>/sqlmanager/*</url-pattern>
    </servlet-mapping>
        
        
        
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>